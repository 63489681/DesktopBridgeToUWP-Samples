<Window x:Class="HelloWorldWpfSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWorldWpfSample"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBlock x:Name="HelloWorldText"
                           Grid.Row="0"
                           Text="Hello, World!"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="50"
                           RenderTransformOrigin="0.5,0.5"
                           FontWeight="Bold">
        </TextBlock>
        <TextBox x:Name="LiveTile"
                         Text="Live Tile in wpf!"
                         FontSize="25"
                         Margin="26,198,10,74" />
        <Button x:Name="AddLiveTile"
                        Width="100"
                        Height="44"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        Content="Add Live Tile!" Click="AddTileButton_Click" Margin="195,0,225,10.5" />
    </Grid>
</Window>
